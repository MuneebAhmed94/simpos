<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ClientListScreenWidget">
        <div class="clientlist-screen screen">
            <div class="screen-content">
                <div class="header">
                    <h3 class="title">Customers</h3>
                    <div class="searchbox">
                        <input placeholder="Search Customers" />
                        <span class="search-icon">
                            <i class="fa fa-search" />
                        </span>
                        <span class="search-clear"></span>
                    </div>
                    <span class="button btn new-customer" aria-label="Add a customer" title="Add a customer">
                        <i class='fa fa-plus'></i>
                    </span>
                </div>
                <div class="client-list">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="client-list-contents"></tbody>
                    </table>
                </div>

                <div class="footer">
                    <button class="button btn back">
                        Back
                    </button>
                    <button class="button btn btn-primary next" disabled="disabled">
                        Select
                    </button>
                </div>
                <div class="client-details-contents oe_hidden"></div>
            </div>
        </div>
    </t>
    <t t-name="ClientLine">
        <tr class='client-line' t-att-data-id='partner.id'>
            <td><t t-esc='partner.name' /></td>
            <td><t t-esc='partner.address' /></td>
            <td><t t-esc='partner.phone or partner.mobile or ""' /></td>
            <td>
                <button class="button btn btn-primary-ghost btn-sm btn-show-details" t-att-data-id='partner.id'>
                    <i class="fa fa-info" aria-hidden="true"></i>
                </button>
            </td>
        </tr>
    </t>
    <t t-name="ClientDetailsEdit">
        <section class='client-details edit'>
            <div class="modal-header">
                <h2 class="title">
                    Customer information
                </h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <table>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <td>
                                    <input class='detail client-name' name='name' t-att-value='partner.name' placeholder='Name'></input>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Phone
                                </th>
                                <td>
                                    <input class='detail client-phone'  name='phone' type='tel' t-att-value='partner.phone || ""'></input>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Street
                                </th>
                                <td>
                                    <input class='detail client-address-street' name='street' t-att-value='partner.street || ""' placeholder='Street'></input>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    City
                                </th>
                                <td>
                                    <input class='detail client-address-city' name='city' t-att-value='partner.city || ""' placeholder='City'></input>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Email
                                </th>
                                <td>
                                    <input class='detail client-email' name='email' type='email' t-att-value='partner.email || ""'></input>
                                </td>
                            </tr>
